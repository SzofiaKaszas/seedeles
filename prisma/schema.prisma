generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int @id @default(autoincrement())
  email      String @unique
  password   String
  profilePic String
  wishlist  Products[]
}

model Products {
  id         Int   @id @default(autoincrement())
  name       String
  price      Decimal @db.Decimal(10, 2)
  expiration DateTime?
  wishlistedBy User[]
}
